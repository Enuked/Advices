---
import dice from "../../public/assets/images/icon-dice.svg";
import pause from "../../public/assets/images/pattern-divider-mobile.svg";

interface Props {
  title: string;
}
const fetchAdvice = async () => {
  try {
    const response = await fetch("https://api.adviceslip.com/advice");
    if (!response.ok) {
      throw new Error(`HTTP error! status: ${response.status}`);
    }
    const adviceData = await response.json();
    return adviceData.slip;
  } catch (error) {
    console.error("Error:", error);
    return { error: error.message };
  }
};

const { id, advice, error } = await fetchAdvice();
const { title } = Astro.props;
---

<astro>
  {
    error ? (
      <p>Error: {error}</p>
    ) : (
      <div class="wrapper">
        <main class="container">
          <article class="head">
            <h1>{title}</h1>
            <p> #{id}</p>
          </article>
          <article class="advice">
            <p>"{advice}"</p>
          </article>
          <aside class="span-img">
					</aside>

          <div class="dice-img">
            <img src={dice.src} alt="dice" />
          </div>
        </main>
      </div>
    )
  }
</astro>

<style lang="scss">
  @import "../style/layout.scss";
  @import "../style/global.scss";
</style>
